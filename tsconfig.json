{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "sourceMap": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "types"],
    "rootDir": "./lib",
    "outDir": "./dist"
  },
  "exclude": [
    "__tests__",
    "dist",
    "node_modules",
    "benchmark.ts"
  ]
}
