{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "sourceMap": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "rootDir": "./lib",
    "outDir": "./dist"
  },
  "exclude": [
    "__tests__",
    "dist",
    "node_modules"
  ]
}
